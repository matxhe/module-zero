<div ng-controller="app.views.roles.index as vm">
    <div class="row margin-bottom-5">
        <div class="col-xs-6">
            <div class="page-head">
                <div class="page-title">
                    <h1>
                        <span>Roles</span> <small>Use roles to group permissions.</small>
                    </h1>
                </div>
            </div>
        </div>
        <div class="col-xs-6 text-right">
            <button ng-if="vm.permissions.create" class="btn btn-primary blue" ng-click="vm.createRole()"><i class="fa fa-plus"></i> Create new role</button>
        </div>
    </div>
    <div class="portlet light">
        <div class="portlet-body">
            <div busy-if="vm.loading">
                <div ui-grid="vm.gridOptions" ui-grid-pagination ui-grid-resize-columns></div>
            </div>
        </div>
    </div>
</div>